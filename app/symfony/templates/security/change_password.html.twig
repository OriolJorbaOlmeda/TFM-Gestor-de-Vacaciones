{% extends 'base.html.twig' %}

{% block body %}

<body class="hold-transition login-page">
<div class="login-box">
    <div class="login-logo">
        <b>{{ "general.applicationTitle"|trans }}</b>
    </div>
    <div class="card">
        <div class="card-body login-card-body">

            {{ form_start(form) }}
            {{ form_errors(form) }}

            {{ form_row(form.password) }}
            {{ form_row(form.new_password) }}

            <div class="row">
                <div class="col-12">
                    {{ form_row(form.submit) }}
                </div>
            </div>

            {{ form_end(form) }}


            <p class="mt-3 mb-1">
                <a href="{{ path('app_login') }}">{{ "changePass.login"|trans }}</a>
            </p>
        </div>
    </div>
</div>

</body>
{% endblock %}
