{% extends 'base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('js/validate_pass.js') }}" defer></script>
{% endblock %}

{% block body %}

<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <b>{{ "changePass.title"|trans }}</b>
        </div>
        <div class="card">
            <div class="card-body login-card-body">

                {{ form_start(form) }}

                {{ form_label(form.password) }}
                {{ form_widget(form.password) }}
                <span style="color: red">{{ form_errors(form.password) }}</span>

                {{ form_label(form.new_password) }}
                {{ form_widget(form.new_password, {'id': 'new_password'}) }}
                <small> {{ form_help(form.new_password) }}</small>
                <span style="color: red">{{ form_errors(form.new_password) }}</span>

                <div class="row mt-3">
                    <div class="col-12">
                        {{ form_row(form.submit) }}
                    </div>
                </div>

                {{ form_end(form) }}

                <p class="mt-3 mb-1">
                    <a href="{{ path('app_login') }}">{{ "changePass.login"|trans }}</a>
                </p>
            </div>
        </div>
    </div>

</body>
{% endblock %}
