{% extends 'base.html.twig' %}

{%  block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('js/control_fechas.js') }}" defer></script>
    <script type="text/javascript" src="{{ asset('js/utils.js') }}" defer></script>
{% endblock %}

{% block body %}

    <body class="hold-transition layout-top-nav">
    <div class="wrapper">

        <!-- Navbar -->
        {% if is_granted('ROLE_SUPERVISOR') %}
            {{ include('supervisor/navbar.html.twig') }}
        {% elseif is_granted('ROLE_EMPLEADO')%}
            {{ include('empleado/navbar.html.twig') }}
        {% endif %}

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper" style="min-height: calc(100vh - calc(3.5rem + 1px));">
            <div class="content-header">
                <div class="container">
                    <div class="col-sm-6">
                        <h1 class="m-0"> Solicitar vacaciones</h1>
                    </div>
                </div>
            </div>

            <!-- Main content -->
            <div class="content">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card card-primary">
                                <div class="card-header">
                                    <h3 class="card-title">Datos de la solicitud</h3>
                                </div>

                                {{ form_start(form) }}
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-5">
                                                {{ form_row(form.initial_date, { 'id': 'fechaInicio' }) }}
                                                <!--<span class="error invalid-feedback"> La fecha inicio tiene que ser mayor o igual a la fecha actual y menor a la fecha fin </span>-->
                                            </div>
                                            <div class="col-md-5">
                                                {{ form_row(form.final_date, { 'id': 'fechaFin' }) }}
                                                <!--<span class="error invalid-feedback"> La fecha fin tiene que ser mayor o igual a la fecha actual y mayor a la fecha inicio </span>-->
                                            </div>
                                            <div class="col-md-2">
                                                {{ form_row(form.duration, { 'id': 'duracion' }) }}
                                            </div>
                                        </div>

                                        {{ form_row(form.reason) }}

                                    </div>

                                    <div class="card-footer">
                                        {{ form_row(form.save) }}
                                    </div>
                                {{ form_end(form) }}

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    </body>

{% endblock %}