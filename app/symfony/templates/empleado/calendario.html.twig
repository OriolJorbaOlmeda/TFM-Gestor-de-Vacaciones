{% extends 'base.html.twig' %}

{%  block stylesheets %}
    {{ parent() }}
    <!------------ CALENDAR ------------>
    <link rel="stylesheet" href="{{ asset('bootstrap_adminLTE/plugins/fullcalendar/main.css') }}">
    <!-- iCheck for checkboxes and radio inputs -->
    <link rel="stylesheet" href="{{ asset('bootstrap_adminLTE/plugins/icheck-bootstrap/icheck-bootstrap.min.css') }}">
{% endblock %}

{%  block javascripts %}
    {{ parent() }}
    <!------------ CALENDAR ------------>
    <script type="text/javascript" src="{{ asset('bootstrap_adminLTE/plugins/jquery-ui/jquery-ui.min.js') }}"></script>
    <!-- fullCalendar 2.2.5 -->
    <script type="text/javascript" src="{{ asset('bootstrap_adminLTE/plugins/fullcalendar/main.js') }}"></script>
{% endblock %}


{% block body %}
    <body class="hold-transition layout-top-nav">
    <div class="wrapper">

        <!-- Navbar -->
        {{ include('empleado/navbar.html.twig') }}

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper" style="min-height: calc(100vh - calc(3.5rem + 1px));">
            <section class="content-header">
                <div class="container">
                    <div class="col-sm-6">
                        <h1 class="m-0">Calendario</h1>
                    </div>
                </div>
            </section>

            <!-- Main content -->
            <section class="content">
                <div class="container">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="card">
                                <div class="card-header">
                                    <h4 class="card-title">Filtros</h4>
                                </div>
                                <div class="card-body">
                                    <div class="icheck-success d-inline">
                                        <input type="checkbox" checked id="checkboxSuccess1">
                                        <label for="checkboxSuccess1">
                                            Días festivos
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <div class="card">
                                <div class="card-header">
                                    <h4 class="card-title">Búsqueda por departamentos</h4>
                                </div>
                                <div class="card-body">
                                    <div class="icheck-success d-inline">
                                        <div class="form-group">
                                            <label>Departamento</label>
                                            <select class="form-control select2" style="width: 100%;">
                                                <option selected="selected">Selecciona...</option>
                                                <option>Departamento de seguridad</option>
                                                <option>Departamento informático</option>
                                                <option>Departamento administrativo</option>
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label>Empleado</label>
                                            <select class="form-control select2" style="width: 100%;">
                                                <option selected="selected">Selecciona...</option>
                                                <option>Ana Lopez</option>
                                                <option>Juan Hernandez</option>
                                                <option>Irene Artetxe</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="card card-primary">
                                <div class="card-body p-0">
                                    <!-- THE CALENDAR -->
                                    <div id="calendar"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>

        <script>
            $(function () {

                /* initialize the calendar
                 -----------------------------------------------------------------*/
                //Date for the calendar events (dummy data)
                var date = new Date()
                var d = date.getDate(),
                    m = date.getMonth(),
                    y = date.getFullYear()
                var Calendar = FullCalendar.Calendar;

                var calendarEl = document.getElementById('calendar');

                var calendar = new Calendar(calendarEl, {
                    headerToolbar: {
                        left: 'prev,next today',
                        center: 'title',
                        right: 'dayGridMonth,timeGridWeek,timeGridDay'
                    },
                    themeSystem: 'bootstrap',
                    //Random default events
                    events: [
                        {
                            title: 'Ana Fernandez',
                            start: new Date(y, m, 1),
                            end: new Date(y, m, 5),
                            backgroundColor: '#ff851b', //orange
                            borderColor: '#ff851b', //orange
                            allDay: true
                        },
                        {
                            title: 'Jon Artetxe',
                            start: new Date(y, m, 13),
                            end: new Date(y, m, 15),
                            allDay: true,
                            backgroundColor: '#e83e8c', //pink
                            borderColor: '#e83e8c' //pink
                        },
                        {
                            title: 'Maria Lopez',
                            start: new Date(y, m, 21),
                            allDay: true,
                            backgroundColor: '#6610f2', //indigo
                            borderColor: '#6610f2' //indigo
                        },
                        {
                            title: 'Sergio Guerrero',
                            start: new Date(y, m, 19),
                            allDay: true,
                            backgroundColor: '#3c8dbc', //Lightblue
                            borderColor: '#3c8dbc' //Lightblue
                        }
                    ],
                    editable: true,
                    droppable: true // this allows things to be dropped onto the calendar !!!
                });

                calendar.render();
                // $('#calendar').fullCalendar()
            })
        </script>
    </div>
    </body>
{% endblock %}