{% extends 'base.html.twig' %}

{%  block stylesheets %}
    {{ parent() }}
    <!------------ CALENDAR ------------>
    <link rel="stylesheet" href="{{ asset('bootstrap_adminLTE/plugins/fullcalendar/main.css') }}">
    <!-- iCheck for checkboxes and radio inputs -->
    <link rel="stylesheet" href="{{ asset('bootstrap_adminLTE/plugins/icheck-bootstrap/icheck-bootstrap.min.css') }}">
{% endblock %}


{%  block javascripts %}
    {{ parent() }}
    <!------------ CALENDAR ------------>
    <script type="text/javascript" src="{{ asset('bootstrap_adminLTE/plugins/jquery-ui/jquery-ui.min.js') }}"></script>
    <!-- fullCalendar 2.2.5 -->
    <script type="text/javascript" src="{{ asset('bootstrap_adminLTE/plugins/fullcalendar/main.js') }}"></script>
{% endblock %}

{% block body %}
    <body class="hold-transition layout-top-nav">
    <div class="wrapper">

        <!-- Navbar -->
        {% if is_granted('ROLE_SUPERVISOR') %}
            {{ include('supervisor/navbar.html.twig') }}
        {% elseif is_granted('ROLE_EMPLEADO')%}
            {{ include('empleado/navbar.html.twig') }}
        {% endif %}

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper" style="min-height: calc(100vh - calc(3.5rem + 1px));">
            <div class="content-header">
                <div class="container">
                    <div class="col-sm-6">
                        <h1 class="m-0"> Área personal</h1>
                    </div>
                </div>
            </div>

            <!-- Main content -->
            <div class="content">
                <div class="container">

                    {% if is_granted('ROLE_SUPERVISOR') %}
                        {{ include('supervisor/panel_info.html.twig') }}
                    {% endif %}

                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header">
                                    <div class="row">
                                        <div class="col-md-8">
                                            <h4 class="card-title">Periodo vacaciones: 01/01/2022 - 31/03/2023</h4>
                                        </div>
                                        <div class="col-md-2">
                                            <a href="solicitar_vacaciones.html" type="button"
                                               class="btn btn-block btn-sm btn-primary"><i
                                                        class="fa fa-plus"></i>Solicitar vacaciones</a>
                                        </div>
                                        <div class="col-md-2">
                                            <a href="solicitar_ausencia.html" type="button"
                                               class="btn btn-block btn-sm btn-outline-primary"><i
                                                        class="fa fa-plus"></i>Solicitar ausencia</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-4 col-sm-6 col-12">
                                            <div class="info-box m-0">
                                                <span class="info-box-icon bg-info">27</span>
                                                <div class="info-box-content">
                                                    <span class="info-box-text">Días totales</span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4 col-sm-6 col-12">
                                            <div class="info-box m-0">
                                                <span class="info-box-icon bg-info">17</span>
                                                <div class="info-box-content">
                                                    <span class="info-box-text">Días disponibles</span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4 col-sm-6 col-12">
                                            <div class="info-box m-0">
                                                <span class="info-box-icon bg-info">10</span>
                                                <div class="info-box-content">
                                                    <span class="info-box-text">Días utilizados</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="col-sm-6">
                        <h4> Calendario </h4>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="card">
                                <div class="card-header">
                                    <h4 class="card-title">Filtros</h4>
                                </div>
                                <div class="card-body">
                                    <div class="icheck-orange">
                                        <input type="checkbox" checked id="checkbox1">
                                        <label for="checkbox1">
                                            Vacaciones
                                        </label>
                                    </div>
                                    <div class="icheck-indigo">
                                        <input type="checkbox" checked id="checkbox2">
                                        <label for="checkbox2">
                                            Ausencias
                                        </label>
                                    </div>
                                    <div class="icheck-olive">
                                        <input type="checkbox" checked id="checkbox3">
                                        <label for="checkbox3">
                                            Días festivos
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="row">
                                <div class="col-12">
                                    <div class="card card-primary">
                                        <div class="card-body p-0">
                                            <!-- THE CALENDAR -->
                                            <div id="calendar"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <script>
        $(function () {

            /* initialize the calendar
             -----------------------------------------------------------------*/
            //Date for the calendar events (dummy data)
            var date = new Date()
            var d = date.getDate(),
                m = date.getMonth(),
                y = date.getFullYear()
            var Calendar = FullCalendar.Calendar;

            var calendarEl = document.getElementById('calendar');

            var calendar = new Calendar(calendarEl, {
                headerToolbar: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'dayGridMonth,timeGridWeek,timeGridDay'
                },
                themeSystem: 'bootstrap',
                //Random default events
                events: [
                    {
                        title: 'Vacaciones en Barcelona',
                        start: new Date(y, m, 1),
                        end: new Date(y, m, 5),
                        backgroundColor: '#ff851b', //orange
                        borderColor: '#ff851b', //orange
                        allDay: true
                    },
                    {
                        title: 'Visita tia',
                        start: new Date(y, m, 13),
                        end: new Date(y, m, 15),
                        allDay: true,
                        backgroundColor: '#ff851b', //orange
                        borderColor: '#ff851b' //orange
                    },
                    {
                        title: 'Fallecimiento abuelo',
                        start: new Date(y, m, 21),
                        allDay: true,
                        backgroundColor: '#6610f2', //indigo
                        borderColor: '#6610f2' //indigo
                    },
                    {
                        title: 'Festivo',
                        start: new Date(y, m, 19),
                        allDay: true,
                        backgroundColor: '#3d9970', //olive
                        borderColor: '#3d9970' //olive
                    }
                ],
                editable: true,
                droppable: true // this allows things to be dropped onto the calendar !!!
            });

            calendar.render();
            // $('#calendar').fullCalendar()
        })
    </script>
    </body>

{% endblock %}