        <div class="content-wrapper" style="min-height: calc(100vh - calc(3.5rem + 1px));">
            <div class="content-header">
                <div class="container">
                    <div class="col-sm-6">
                        <h1 class="m-0">Crear nuevo calendario vacacional</h1>
                    </div>
                </div>
            </div>


            <!-- Main content 1 -->
            <div class="content">
                <div class="container">


                    <div class="row">
                        <div class="col-md-12">
                            <div class="card card-default">
                                <div class="card-header">
                                    <h3 class="card-title">bs-stepper</h3>
                                </div>
                                <div class="card-body p-0">
                                    <div class="bs-stepper">
                                        <div class="bs-stepper-header" role="tablist">
                                            <!-- your steps here -->
                                            <div class="step" data-target="#calendar-part">
                                                <button type="button" class="step-trigger" role="tab"
                                                        aria-controls="calendar-part" id="calendar-part-trigger">
                                                    <span class="bs-stepper-circle">1</span>
                                                    <span class="bs-stepper-label">Logins</span>
                                                </button>
                                            </div>
                                            <div class="line"></div>
                                            <div class="step" data-target="#festives-part">
                                                <button type="button" class="step-trigger" role="tab"
                                                        aria-controls="festives-part" id="festives-part-trigger">
                                                    <span class="bs-stepper-circle">2</span>
                                                    <span class="bs-stepper-label">Various information</span>
                                                </button>
                                            </div>
                                        </div>
                                        <div class="bs-stepper-content">
                                            <!-- your steps content here -->


                                            <!-- CONTENT 1 -->


                                            <div id="calendar-part" class="content" role="tabpanel"
                                                 aria-labelledby="calendar-part-trigger">

                                                {{ form_start(formCalendar) }}
                                                <div class="row">
                                                    <div class="col-md-2">
                                                        <div class="form-group">
                                                            {{ form_row(formCalendar.year) }}
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            {{ form_row(formCalendar.initial_date, { 'id': 'fechaInicio' }) }}
                                                            <span class="error invalid-feedback"> La fecha inicio tiene que ser mayor o igual a la fecha actual y menor a la fecha fin </span>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            {{ form_row(formCalendar.final_date, { 'id': 'fechaFin' }) }}
                                                            <span class="error invalid-feedback"> La fecha fin tiene que ser mayor o igual a la fecha actual y mayor a la fecha inicio </span>
                                                        </div>
                                                    </div>
                                                </div>
                                                {{ form_row(formCalendar.createCalendar) }}
                                                {{ form_end(formCalendar) }}


                                                <button class="btn btn-primary" onclick="stepper.next(); save()">Next
                                                </button>
                                            </div>


                                            <!-- CONTENT 2 -->


                                            <div id="festives-part" class="content" role="tabpanel"
                                                 aria-labelledby="festives-part-trigger">
                                                {{ form_start(formFestive) }}
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            {{ form_row(formFestive.name,{ 'id': 'descNuevoFestivo' }) }}
                                                            <span class="error invalid-feedback"> La fecha inicio tiene que ser mayor o igual a la fecha actual y menor a la fecha fin </span>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <div class="form-group">
                                                                {{ form_row(formFestive.date,{ 'id': 'nuevoFestivo' }) }}
                                                                <span class="error invalid-feedback"> La fecha inicio tiene que ser mayor o igual a la fecha actual y menor a la fecha fin </span>
                                                            </div>
                                                        </div>

                                                        {{ form_row(formFestive.addFestive,{ 'id': 'btn-añadir' }) }}

